        {% include ':Partials:boolean-icon.html.twig'
            with {
                'is_set': plan_distinctions.https_sites.value,
                'name':category.distinctions.https_sites.name.primary
            }
        %}
    </li>
    <li class="distinction-data-item">
        {% include ':Partials:boolean-icon.html.twig'
            with {
                'is_set': plan_distinctions.http_authentication.value,
                'name':category.distinctions.http_authentication.name.primary
            }
        %}
    </li>
    <li class="distinction-data-item">
        {% include ':Partials:boolean-icon.html.twig'
            with {
                'is_set': plan_distinctions.custom_cookies.value,
                'name':category.distinctions.custom_cookies.name.primary
            }
        %}
    </li>
