<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>       

            <a class="navbar-brand" href="{{ path('homepage') }}">
                SimplyTestable
                {% if app.request.get('_route') != 'homepage' %}
                    <span>automated front-end web testing</span>
                {% endif %}                        
            </a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a href="{{ web_client_urls['base'] }}{{ web_client_urls['start_test'] }}">
                        <i class="fa fa-tachometer"></i>
                        {% if is_logged_in %}
                            Dashboard
                        {% else %}
                            Demo dashboard (try me)
                        {% endif %}                                
                    </a>
                </li>
                <li class="{% if app.request.get('_route') == 'features' %}active{% endif %}">
                    <a href="{{ path('features') }}">
                        <i class="fa fa-signal"></i> Features
                    </a>
                </li>
                <li class="{% if app.request.get('_route') == 'plans' %}active{% endif %}">
                    <a href="{{ path('plans') }}">
                        <i class="fa fa-calendar"></i> Pricing and plans
                    </a>
                </li>

                {% if is_logged_in %}
                    <li class="user-actions">
                        <p class="navbar-text spacer highlighted-spacer">&nbsp;</p>
                        <a href="{{ web_client_urls['base'] }}{{ web_client_urls['account'] }}">
                            <i class="fa fa-user"></i> {{ user.username }}
                        </a>
                    </li>                         
                    <li>
                        <form class="navbar-form signout-form" method="post" action="{{ path('sign_out_submit') }}">
                            <button type="submit" class="btn btn-primary btn-sm">
                                Sign out
                                <i class="fa fa-caret-right"></i>
                            </button>
                        </form>
                    </li>                               
                {% else %}
                    <li class="user-actions">                                
                        <div>
                            <p class="navbar-text spacer highlighted-spacer">&nbsp;</p>
                            <a href="{{ web_client_urls['base'] }}{{ web_client_urls['sign_in'] }}" class="btn btn-default btn-sm navbar-btn">
                                <i class="fa fa-caret-right"></i> Sign in
                            </a>
                        </div>
                    </li>                         
                    <li>
                        <div>
                            <p class="navbar-text spacer">&nbsp;</p>                                    
                            <a href="{{ web_client_urls['base'] }}{{ web_client_urls['sign_up'] }}" class="btn btn-default btn-sm navbar-btn">
                                <i class="fa fa-user"></i> Create an account
                            </a>
                        </div>
                    </li>                            
                {% endif %}
            </ul>
        </div><!--/.navbar-collapse -->
    </div>
</div>