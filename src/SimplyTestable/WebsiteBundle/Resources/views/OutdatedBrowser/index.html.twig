{% extends 'SimplyTestableWebsiteBundle::base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/outdated-browser.css') }}">
{% endblock %}

{% block title %}OMG IE{% endblock %}

{% block navbar %}{% endblock %}

{% block body_class %} outdated-browser {{ parent() }}{% endblock %}

{% block body %}
    <div id="landing-strip">
        <div class="container">
            <div class="intro">
                <div class="leader">
                    <h1>
                        Outdated Internet Explorer Browser
                    </h1>

                </div>
                <div class="content">
                    <p>
                        You're using an old version of Internet Explorer.

                        We don't intend to make <a href="{{ path('home_index') }}">Simply Testable</a> work with
                        Internet Explorer less than version 9.
                    </p>
                </div>
            </div>
            <div  id="large-logo">
                {% image '@SimplyTestableWebsiteBundle/Resources/assets/images/browser-icons/256-ie.png' %}
                <img src="{{ asset_url }}" alt="" class="hidden-xs hidden-sm" />
                {% endimage %}
            </div>
        </div>
    </div>

    <div id="outdated-browser-content">
        <div class="container">
            <h2>Try a more modern browser</h2>

            <div class="browser">
                <a href="//google.com/chrome/">
                    {% image '@SimplyTestableWebsiteBundle/Resources/assets/images/browser-icons/128-chrome.png' %}
                    <img src="{{ asset_url }}" alt="Chrome" />
                    {% endimage %}
                    <span class="name">Chrome</span>
                </a>
            </div>

            <div class="browser">
                <a href="http://getfirefox.com">
                    {% image '@SimplyTestableWebsiteBundle/Resources/assets/images/browser-icons/128-firefox.png' %}
                    <img src="{{ asset_url }}" alt="Firefox" />
                    {% endimage %}
                    <span class="name">Firefox</span>
                </a>
            </div>

            <div class="browser">
                <a href="http://opera.com">
                    {% image '@SimplyTestableWebsiteBundle/Resources/assets/images/browser-icons/128-opera.png' %}
                    <img src="{{ asset_url }}" alt="Opera" />
                    {% endimage %}
                    <span class="name">Opera</span>
                </a>
            </div>

            <div class="browser">
                <a href="http://www.apple.com/safari">
                    {% image '@SimplyTestableWebsiteBundle/Resources/assets/images/browser-icons/128-safari.png' %}
                    <img src="{{ asset_url }}" alt="Safari" />
                    {% endimage %}
                    <span class="name">Safari</span>
                </a>
            </div>

            <div class="browser">
                <a href="http://microsoft.com/ie">
                    {% image '@SimplyTestableWebsiteBundle/Resources/assets/images/browser-icons/128-ie.png' %}
                    <img src="{{ asset_url }}" alt="Internet Explorer" />
                    {% endimage %}
                    <span class="name">IE9+</span>
                </a>
            </div>

        </div>
    </div>

{% endblock %}

{% block footer %}{% endblock %}
