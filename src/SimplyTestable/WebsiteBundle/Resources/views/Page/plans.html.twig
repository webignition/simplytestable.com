{% extends 'SimplyTestableWebsiteBundle::base.html.twig' %}

{% macro cta_button(plan_name, is_logged_in, web_client_urls) %}
    {% if is_logged_in %}
        <form method="post" action="{{ web_client_urls.plan_subscribe }}">
            <input type="hidden" name="plan" value="{{ plan_name }}" />
            <button type="submit" class="btn btn-success btn-plan-select">Subscribe now</button>
        </form>
    {% else %}
        <a href="{{ web_client_urls.sign_up }}?plan={{ plan_name }}" class="btn btn-success btn-plan-select">
            <span class="primary">Sign up</span>
            <span class="secondary">30-day trial, no credit card required</span>
        </a>
    {% endif %}
{% endmacro %}

{% import _self as pricing_table %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets
    '@SimplyTestableWebsiteBundle/Resources/assets/css/pricing-tables.css'
    '@SimplyTestableWebsiteBundle/Resources/assets/css/pricing-table.css'
    '@SimplyTestableWebsiteBundle/Resources/assets/css/plans.css'
    filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block body %}

    <div id="landing-strip">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1>30 day free trial. No credit card required.</h1>
                </div>
            </div>

            <div class="pricing-tables attached">
                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-md-4">
                        <div class="plan first">
                            <div class="head">
                                <a href="{{ path('plandetails_index', {'name': 'personal'}) }}">
                                    <h2>Personal</h2>
                                    <p>For small-scale projects</p>
                                </a>
                            </div>

                            <div class="price">
                                <p><span>&pound;{{ plans.personal.price }} <i>per month</i></span></p>
                            </div>

                            <ul class="item-list">
                                <li>Unlimited full-site tests</li>
                                <li>Unlimited single-page tests</li>
                                <li>50 pages examined per test</li>
                                <li>5,000 credits</li>
                            </ul>

                            {{ pricing_table.cta_button('personal', is_logged_in, web_client_urls) }}

                            <a href="{{ path('plandetails_index', {'name': 'personal'}) }}" class="more">Find out more <i class="fa fa-caret-right"></i></a>
                        </div>
                    </div>


                    <div class="col-xs-12 col-sm-6 col-md-4 ">
                        <div class="plan recommended">
                            <div class="head">
                                <a href="{{ path('plandetails_index', {'name': 'agency'}) }}">
                                <h2>Agency</h2>
                                <p>
                                    Great for small organisations
                                </p>
                                </a>
                            </div>

                            <div class="price">
                                <p><span>&pound;{{ plans.agency.price }} <i>per month</i></span></p>
                            </div>

                            <ul class="item-list">
                                <li>Unlimited full-site tests</li>
                                <li>Unlimited single-page tests</li>
                                <li>250 pages examined per test</li>
                                <li>20,000 credits</li>
                            </ul>

                            {{ pricing_table.cta_button('agency', is_logged_in, web_client_urls) }}

                            <a href="{{ path('plandetails_index', {'name': 'agency'}) }}" class="more">Find out more <i class="fa fa-caret-right"></i></a>
                        </div>
                    </div>


                    <div class="col-xs-12 col-sm-6 col-md-4 ">
                        <div class="plan last">
                            <div class="head">
                                <a href="{{ path('plandetails_index', {'name': 'business'}) }}">
                                <h2>Business</h2>
                                <p>Best value for professionals</p>
                                </a>
                            </div>

                            <div class="price">
                                <p><span>&pound;{{ plans.business.price }} <i>per month</i></span></p>
                            </div>

                            <ul class="item-list">
                                <li>Unlimited full-site tests</li>
                                <li>Unlimited single-page tests</li>
                                <li>2,500 pages examined per test</li>
                                <li>100,000 credits</li>
                            </ul>

                            {{ pricing_table.cta_button('business', is_logged_in, web_client_urls) }}

                            <a href="{{ path('plandetails_index', {'name': 'business'}) }}" class="more">Find out more <i class="fa fa-caret-right"></i></a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="clearfix"></div>
            <div class="row">
                <div class="col-md-12">
                    <p>
                        Need more detail? Find out about the <a href="{{ path('page_accountbenefits') }}">benefits of creating an account</a>.
                    </p>

                    <p>
                        Need to test sites larger than 2,500 pages or need to run many large tests? Our <a href="{{ path('plandetails_index', {'name': 'enterprise'}) }}">custom enterprise plans</a> can be tailored to your precise needs.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div id="features">
        <div class="container">
            <div class="row">
                <div class="col-md-12 iconified-section">
                    <div class="inner">
                        <div class="col-md-4">
                            <h3>How does the free trial work?</h3>

                            <p>
                                You can sign up and use Simply Testable for 30 days
                                without having to enter any credit card details.
                            </p>

                            <p>
                                If you provide your card details before your trial
                                ends you will continue with the plan you chose.
                                You will be billed monthly from the end of your
                                trial.
                            </p>

                            <p>
                                If you don't provide card details you will be
                                downgraded to a free basic account  with the option
                                to upgrade to a paid plan at your convenience.
                            </p>

                        </div>
                        <div class="col-md-4">
                            <h3>What are credits?</h3>
                            <p>
                                Performing a HTML validation, CSS validation or
                                JSLint analysis on a single URL requires one credit.
                            </p>

                            <p>
                                Performing all three on a 10 page site would require
                                30 credits.
                            </p>

                            <p>
                                The number of monthly credits you have available
                                depends on the plan you choose.
                            </p>

                            <p>
                                Credits don't roll over from one month to the next.
                            </p>

                        </div>
                        <div class="col-md-4">
                            <h3>How long are your contracts?</h3>

                            <p>
                                All plans are month to month.
                            </p>

                            <h3>When can I cancel?</h3>

                            <p>
                                You can cancel at any time. If you cancel during
                                a billing cycle (which is quite likely unless you
                                time things very well) we will refund you for the
                                remainder of the month not yet used.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}