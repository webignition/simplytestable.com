{% extends 'SimplyTestableWebsiteBundle::base.html.twig' %}

{% block stylesheets %}      
{{ parent() }}
<link rel="stylesheet" href="/bundles/simplytestablewebsite/css/homepage.css" />
{% endblock %}

{% block body %}

<div id="landing-strip">
    <div class="container">
        <div class="row-fluid">
            <div class="span12">            
                <div id="logo">           
                {% if app.request.get('_route') != 'homepage' %}                
                    <a href="{{ path('homepage') }}">Simply Testable Homepage</a>
                {% endif %}                
                </div>             
                <div class="row-fluid">                    
                    <div class="span6 intro">
                        <div class="leader">
                            <h1>
                                Automated front-end web testing
                            </h1>    
                            <p>
                                Save time and take the pain out of routine front-end web testing.
                                One-click testing of your entire site.
                            </p>                            
                        </div>
                        <div class="content">
                            <ul class="features">
                                <li class="feature">
                                    <p><i class="icon icon-star"></i><i class="icon icon-star-empty"></i> HTML validation, CSS validation and JavaScript linting</p>
                                </li>
                                <li class="feature">
                                    <p><i class="icon icon-star"></i><i class="icon icon-star-empty"></i> Test either your full site or a single page with just one click</p>
                                </li>                                
                                <li class="feature">                                    
                                    <p><i class="icon icon-star"></i><i class="icon icon-star-empty"></i> <a href="http://gears.simplytestable.com/http://blog.simplytestable.com//462/">overview report</a> of successes and failures</p>
                                </li>                                
                                <li class="feature">
                                    <p><i class="icon icon-star"></i><i class="icon icon-star-empty"></i> detailed <a href="http://gears.simplytestable.com/http://blog.simplytestable.com//462/276988/results/">per-URL error report</a></p>
                                </li>
                            </ul>

{% include 'SimplyTestableWebsiteBundle:Partials:start-new-test-form.html.twig' %}

                        </div>                        
                    </div>
                    <div class="span6 slideshow">
                        <div id="myCarousel" class="carousel slide">
                            <div class="carousel-inner">
                                <div class="item">
                                    <img src="/bundles/simplytestablewebsite/images/carousel/00-start.png" alt="Start a new website test" />
                                </div>
                                <div class="item active">
                                    <img src="/bundles/simplytestablewebsite/images/carousel/01-progress.png" alt="Test progress" />
                                </div>
                                <div class="item">
                                    <img src="/bundles/simplytestablewebsite/images/carousel/02-results.png" alt="Test results" />
                                </div>                                    
                                <div class="item">
                                    <img src="/bundles/simplytestablewebsite/images/carousel/03-result-detail.png" alt="Test result detail" />
                                </div>
                            </div>
                            <a class="left carousel-control" href="#myCarousel" data-slide="prev">&lsaquo;</a>
                            <a class="right carousel-control" href="#myCarousel" data-slide="next">&rsaquo;</a>
                        </div>                         
                    </div>
                </div>                
            </div>
        </div>              
    </div>
</div>

<div id="recent-site-tests">
    <div class="container">
        <div class="row-fluid">
            <div class="span12 iconified-section">
                <i class="icon section-icon icon-cog"></i>
                <h3>Recent free demo tests</h3>
                <div class="inner" id="recent-site-tests-list">
                </div>
            </div>
        </div>        
    </div>
</div>

<div id="features">
    <div class="container">
        <div class="row-fluid">
            <div class="span12 iconified-section">
                <i class="icon section-icon icon-asterisk"></i>

                <div class="inner">
                    <div class="span4">                        
                        <h3>Technical verification</h3>
                        <p>Complete:</p>
                        <ul class="feature-list">
                            <li class="completed">
                                <p><i class="icon icon-ok"></i> <span class="content">HTML validation</span></p>
                            </li>
                            <li class="completed">
                                <p><i class="icon icon-ok"></i> <span class="content">CSS validation</span></p>
                            </li>                             
                            <li class="completed">
                                <p><i class="icon icon-ok"></i> <span class="content">JavaScript quality checks with <a href="http://en.wikipedia.org/wiki/JSLint">JSLint</a></span></p>
                            </li>                            
                        </ul> 
                        <!--
                        <p>Planned:</p>
                        <ul class="feature-list">    

                        </ul>                      
                        -->
                    </div>
                    <div class="span4">                        
                        <h3>Quality checks</h3>
                        <p>Planned:</p>
                        <ul class="feature-list">                           
                            <li>
                                <p><i class="icon icon-time"></i> <span class="content">Find broken links</span></span></p>
                            </li>                             
                            <li>
                                <p><i class="icon icon-time"></i> <span class="content">Image <code>alt</code> attribute quality</span></p>
                            </li>                                
                            <li>
                                <p><i class="icon icon-time"></i> <span class="content">Check for presence of <a href="http://www.robotstxt.org/robotstxt.html">robots.txt</a></span></p>
                            </li>                             
                            <li>
                                <p><i class="icon icon-time"></i> <span class="content">Check for presence of a <a href="http://en.wikipedia.org/wiki/Favicon">favicon</a></span></p>
                            </li>                         
                        </ul>                       
                    </div>
                    <div class="span4">                        
                        <h3>Improvements</h3>
                        <p>Complete:</p>
                        <ul class="feature-list">                           
                            <li class="completed">
                                <p><i class="icon icon-ok"></i> <span class="content"><a href="http://blog.simplytestable.com/urls-now-collected-from-news-feeds/">Collect site URLs from an RSS feed</a></span></p>
                            </li>
                            <li class="completed">
                                <p><i class="icon icon-ok"></i> <span class="content"><a href="http://blog.simplytestable.com/compressed-sitemaps-now-supported/">Add support for compressed sitemaps</a></span></p>
                            </li>                             
                            <li class="completed">
                                <p><i class="icon icon-ok"></i> <span class="content"><a href="http://blog.simplytestable.com/gracefully-handling-test-failure-without-blocking-test-progress/">Gracefully handle test failure without blocking test progress</a></span></p>
                            </li>
                            <li class="completed">
                                <p><i class="icon icon-ok"></i> <span class="content"><a href="http://blog.simplytestable.com/improved-viewing-of-results-for-large-tests/">More robust progress and results retrieval for large sites (2000+ URLs)</a></span></p>
                            </li>                             
                        </ul> 
                        <!--
                        <p>Planned:</p>
                        <ul class="feature-list">
                            <li>
                                <p><i class="icon icon-time"></i> <span class="content">More robust progress and results retrieval for large sites (2000+ URLs)</p>
                            </li>                       
                        </ul>
                        -->
                    </div>                        
                </div>
            </div>
        </div>        
    </div>    
</div>          


{% endblock %}