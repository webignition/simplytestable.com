{% extends 'SimplyTestableWebsiteBundle::base.html.twig' %}

{% block javascripts %}
{{ parent() }}
    <!--[if IE 6]>
    {% javascripts '@SimplyTestableWebsiteBundle/Resources/assets/vendor/supersleight/supersleight.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}       
    <![endif]-->      
{% endblock %} 

{% block stylesheets %}
{{ parent() }}
{% stylesheets    
    '@SimplyTestableWebsiteBundle/Resources/assets/css/outdated-browser.css'
    filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
{% endstylesheets %} 
    <!--[if IE 7]>
    <link href="//netdna.bootstrapcdn.com/font-awesome/2.0/css/font-awesome-ie7.css" rel="stylesheet">
    <![endif]--> 
    
    <!--[if IE 6]>    
{% stylesheets    
    '@SimplyTestableWebsiteBundle/Resources/assets/vendor/bootstrap-ie6/Bootstrap-IE6/ie6.css'
    filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
{% endstylesheets %}     
    <![endif]-->     
{% endblock %}

{% block title %}
OMG IE
{% endblock %}

{% block body_class %} outdated-browser {{ parent() }}{% endblock %}
{% block body_ltIE7_class %} outdated-browser {{ parent() }}{% endblock %}
{% block body_IE7_class %} outdated-browser {{ parent() }}{% endblock %}
{% block body_IE8_class %} outdated-browser {{ parent() }}{% endblock %}
{% block body_IE9_class %} outdated-browser {{ parent() }}{% endblock %}

{% block body %}

<div id="landing-strip">
    <div class="container">
        <div class="row-fluid">
            <div class="span12">
                <div id="logo"></div>
                <div class="row-fluid">                    
                    <div class="span7 intro">
                        <div class="leader">
                            <h1>
                                Outdated Internet Explorer Browser
                            </h1>     

                        </div>
                        <div class="content">
                            <p>
                                You're using an old version of Internet Explorer.
                            </p>                                
                            <p>          
                                We don't intend to make Simply Testable work with Internet Explorer less than version 8.
                            </p> 
                        </div>                        
                    </div>
                    <div class="span4">
                        <img src="/bundles/simplytestablewebsite/images/256-ie.png" />                   
                    </div>
                </div>                
            </div>
        </div>              
    </div>
</div>

<div id="outdated-browser-content">
    <div class="container">
        <div class="row-fluid">
            <div class="span12 iconified-section">
                <i class="icon section-icon icon-download"></i>
                <h3>Try a more modern browser</h3>
                <div class="row-fluid browsers">
                    <div class="span6">
                        <div class="row-fluid">
                            <div class="row-fluid">
                                <div class="span4">
                                    <a href="//google.com/chrome/">
                                        <img src="/bundles/simplytestablewebsite/images/128-chrome.png" /> 
                                        <span class="name">Chrome</span>
                                    </a>
                                </div>
                                <div class="span4">
                                    <a href="http://getfirefox.com">
                                        <img src="/bundles/simplytestablewebsite/images/128-firefox.png" /> 
                                        <span class="name">Firefox</span>
                                    </a>                                    
                                </div>                                  
                                <div class="span4">
                                    <a href="http://opera.com">
                                        <img src="/bundles/simplytestablewebsite/images/128-opera.png" /> 
                                        <span class="name">Opera</span>
                                    </a>                                    
                                </div>                                    
                            </div>
                            <div class="row-fluid">
                                <div class="span4">
                                    <a href="http://www.apple.com/safari">
                                        <img src="/bundles/simplytestablewebsite/images/128-safari.png" /> 
                                        <span class="name">Safari</span>
                                    </a>                                                                        
                                </div>
                                <div class="span4">
                                    <a href="http://microsoft.com/ie">
                                        <img src="/bundles/simplytestablewebsite/images/128-ie.png" /> 
                                       <span class="name">IE9+</span>
                                    </a>                                    
                                </div>                                 
                            </div>   
                        </div>                        
                    </div>
                    <div class="span6">
                        <p>
                            Providing comparable support for versions of Internet
                            Explorer less than verison 8 takes a lot of time.
                        </p>
                        <p>
                            Supporting older versions of Internet
                            Explorer is not the best way to help our users.
                        </p>                       
                        <p>
                            We choose to spend such time on making Simply Testable
                            better for more modern browsers.
                        </p>                           
                    </div>                       
                </div>
            </div>
        </div>        
    </div>
</div>
          


{% endblock %}