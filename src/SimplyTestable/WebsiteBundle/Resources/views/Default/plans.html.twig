{% block body %}

<div id="landing-strip">
    <div class="container">   
            <div class="row-fluid">
                <div class="span12">
                    <h1>30 day free trial. No credit card required.</h1>
                </div>
            </div> 
            <div class="clearfix"></div>        
        <div class="row-fluid pricing-table pricing-three-column">

            
