{
    "name": "webignition/simplytestable.com",
    "description": "Source for http://simplytestable.com/",
    "autoload": {
        "psr-4": { "": "src/" },
        "classmap": [ "app/AppKernel.php", "app/AppCache.php" ]
    },
    "autoload-dev": {
        "psr-4": { "Tests\\": "tests/" },
        "files": [ "vendor/symfony/symfony/src/Symfony/Component/VarDumper/Resources/functions/dump.php" ]
    },
    "require": {
        "php": ">=7.2.0",
        "doctrine/doctrine-bundle": "^1.6",
        "doctrine/orm": "^2.6",
        "sensio/framework-extra-bundle": "^5.0.0",
        "symfony/monolog-bundle": "^3.1.0",
        "symfony/symfony": "^4.0.0",
        "twig/twig": "^2.0",
        "doctrine/migrations": "~1.6",
        "doctrine/doctrine-migrations-bundle": "~1.3",
        "webignition/url":">=1.0,<2.0",
        "webignition/simplytestable-user-model": ">=0.1,<1",
        "webignition/simplytestable-user-serializer": ">=1.1,<2",
        "webignition/php-ie-detector":">=0.2,<1",
        "wildbit/postmark-php": "^2"
    },
    "require-dev": {
        "phpunit/phpunit": "~7.0",
        "squizlabs/php_codesniffer": "3.*",
        "symfony/phpunit-bridge": "^4.0.0",
        "mockery/mockery": "^1.0",
        "guzzlehttp/guzzle": "~6"
    },
    "scripts": {
        "symfony-scripts": [
            "php bin/console cache:clear --no-warmup",
            "php bin/console cache:warmup"
        ],
        "post-install-cmd": [
            "@symfony-scripts"
        ],
        "post-update-cmd": [
            "@symfony-scripts"
        ],
        "test-unit": "./vendor/bin/phpunit --colors tests/AppBundle/Unit/",
        "test-functional": "./vendor/bin/phpunit --colors tests/AppBundle/Functional/",
        "test": [
            "@composer test-unit",
            "@composer test-functional"
        ],
        "cs": "./vendor/bin/phpcs --colors --standard=PSR2 --extensions=php src/AppBundle tests/",
        "ci": [
            "@composer cs",
            "@composer test"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable":true,
    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web",
        "symfony-var-dir": "var",
        "symfony-bin-dir": "bin",
        "symfony-tests-dir": "tests",
        "symfony-assets-install": "relative",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml"
        },
        "branch-alias": {
            "dev-master": "3.4-dev"
        }
    }
}
